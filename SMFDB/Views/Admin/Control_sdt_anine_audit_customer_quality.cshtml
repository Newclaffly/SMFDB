@{
    ViewData["Title"] = "Control_sdt_anine_audit_customer_quality";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@if (ViewBag.Message == "OK")
{
    <div class="alert alert-success alert-dismissible" style="margin-top:20px">
        File successfully uploaded to File System.
        @*@ViewBag.Message*@
    </div>
}
else if (ViewBag.Message == "NOT_OK")
{
    <div class="alert alert-danger alert-dismissible" style="margin-top:20px">
        File failed uploaded to File System.
        @*@ViewBag.Message*@
    </div>
}
<form asp-action="Add_file_upload_autdit_anine_customer_quality"
      asp-controller="Admin"
      method="post"
      enctype="multipart/form-data">
    <section class="forms">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-close">
                        </div>
                        <div class="card-header d-flex align-items-center">
                            <h3 class="h4">File Upload</h3>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title">Upload file Presentation for (Customer Quality)</h5>
                            <p class="card-text">Please upload file only .pdf</p>
                            <div class="form-group">
                                <input id="files" type="file" name="file_pdf" class="form-control-file">
                            </div>
                            <div class="form-group mt-4">
                                <input type="submit" class="btn btn-primary">
                            </div>
                            <div id="divloader" style="display:none">
                            </div>
                            <br />
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>

<script>
    $(document).ready(function () {

    });
</script>
